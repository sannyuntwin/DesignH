# Docker Environment Variables for Canvas Designer
# Copy this to .env and update with your values

# Database Configuration
POSTGRES_DB=canvas_designer
POSTGRES_USER=canvas_user
POSTGRES_PASSWORD=canvas_password

# Backend Configuration
DATABASE_URL=postgresql://canvas_user:canvas_password@postgres:5432/canvas_designer?sslmode=disable
JWT_SECRET=your-super-secret-jwt-key-change-in-production
PORT=8080

# Frontend Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8080

# Production URLs (update when deploying)
API_URL=https://your-domain.com/api
FRONTEND_URL=https://your-domain.com
